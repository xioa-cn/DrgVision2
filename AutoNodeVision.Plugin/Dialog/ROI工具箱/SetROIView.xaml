<Window
    x:Class="AutoNodeVision.Plugin.Dialog.ROI工具箱.SetROIView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:halconControl="clr-namespace:HalconDotNet;assembly=halcondotnet"
    xmlns:local="clr-namespace:AutoNodeVision.Plugin.Dialog.ROI工具箱"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ROI绘制窗口"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.4*" />
        </Grid.ColumnDefinitions>
        <halconControl:HSmartWindowControlWPF x:Name="hsmart" />

        <StackPanel
            Grid.Column="1"
            Margin="10">
            <UniformGrid VerticalAlignment="Top">
                <RadioButton
                    x:Name="rbCircle"
                    Margin="10"
                    Content="圆形ROI"
                    FontSize="16" />
                <RadioButton
                    x:Name="rbRectangle"
                    Margin="10"
                    Content="矩形ROI"
                    FontSize="16" />
                <RadioButton
                    x:Name="rbEllipse"
                    Margin="10"
                    Content="椭圆ROI"
                    FontSize="16" />
            </UniformGrid>
            <Button
                Height="40"
                Margin="20,50,20,10"
                Background="DarkOrange"
                Click="DrawROI_Click"
                Content="绘制ROI"
                FontSize="19"
                Foreground="White" />
            <Button
                Height="40"
                Margin="20,10"
                Background="DarkOrange"
                Click="Clear_Click"
                Content="清空当前"
                FontSize="19"
                Foreground="White" />

            <Button
                Height="40"
                Margin="20,10"
                Background="DarkOrange"
                Click="Complete_Click"
                Content="完成"
                FontSize="19"
                Foreground="White" />


            <StackPanel />
        </StackPanel>
    </Grid>
</Window>

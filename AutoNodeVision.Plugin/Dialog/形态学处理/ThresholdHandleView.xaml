<Window
    x:Class="AutoNodeVision.Plugin.Dialog.形态学处理.ThresholdHandleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:halconControl="clr-namespace:HalconDotNet;assembly=halcondotnet"
    xmlns:local="clr-namespace:AutoNodeVision.Plugin.Dialog.形态学处理"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="二值化窗口"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>

        <halconControl:HSmartWindowControlWPF x:Name="hsmart" />

        <StackPanel
            Grid.Column="1"
            Margin="20">


            <Button
                Height="40"
                MinWidth="100"
                Margin="0,20"
                Click="Execute_Click"
                Content="完成二值化"
                FontSize="21" />

            <TextBlock
                Margin="0,20"
                FontSize="19"
                Text="最小灰度:" />

            <Slider
                x:Name="minSlider"
                Maximum="255"
                Minimum="0"
                SmallChange="1"
                ValueChanged="minSlider_ValueChanged" />
            <TextBox
                Width="100"
                Height="30"
                Margin="0,5"
                Background="Teal"
                FontSize="17"
                Foreground="White"
                IsReadOnly="True"
                Text="{Binding ElementName=minSlider, Path=Value}"
                TextAlignment="Center" />

            <TextBlock
                Margin="0,80,10,10"
                FontSize="19"
                Text="最大灰度:" />

            <Slider
                x:Name="maxSlider"
                Maximum="255"
                Minimum="0"
                SmallChange="1"
                ValueChanged="maxSlider_ValueChanged" />
            <TextBox
                Width="100"
                Height="30"
                Margin="0,5"
                Background="Teal"
                FontSize="17"
                Foreground="White"
                IsReadOnly="True"
                Text="{Binding ElementName=maxSlider, Path=Value}"
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>

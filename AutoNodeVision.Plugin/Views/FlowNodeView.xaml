<UserControl
    x:Class="AutoNodeVision.Plugin.Views.FlowNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:AutoNodeVision.Plugin.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="NodeView"
    Width="150"
    Height="33"
    MouseEnter="UserControl_MouseEnter"
    MouseLeave="UserControl_MouseLeave"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!-- 拖拽控件的样式 -->
        <Style TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Rectangle Fill="Transparent" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 控件模版，结点的四个连接点 -->
        <ControlTemplate
            x:Key="ConnectorTemplate"
            TargetType="ContentControl">
            <Grid>
                <local:Connector
                    Width="8"
                    Height="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Direction="Top" />
                <local:Connector
                    Width="8"
                    Height="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Direction="Bottom" />
                <local:Connector
                    Width="8"
                    Height="8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Direction="Left" />
                <local:Connector
                    Width="8"
                    Height="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Direction="Right" />
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem
                Click="DeleteNode_Click"
                Header="删除"
                Tag="{Binding ElementName=NodeView}" />
            <MenuItem
                Header="编辑"
                Click="EditNode_Click" />
        </ContextMenu>
    </UserControl.ContextMenu>

    <Grid>
        <Thumb
            x:Name="thumb"
            Panel.ZIndex="2"
            Cursor="Hand"
            DragDelta="thumb_DragDelta"
            DragStarted="thumb_DragStarted" />
        <Border
            Background="White"
            BorderBrush="#8ED0F3"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <Border
                    x:Name="nodeBorder"
                    Width="20"
                    Margin="0,0,15,0"
                    Background="#8ED0F3"
                    CornerRadius="4,0,0,4" />

                <TextBlock
                    x:Name="textBlock"
                    VerticalAlignment="Center"
                    d:Text="HAO123"
                    FontSize="13"
                    Foreground="Gray" />
            </StackPanel>
        </Border>

        <ContentControl
            x:Name="ConnectorControls"
            Margin="-5"
            Panel.ZIndex="3"
            d:Visibility="Visible"
            Background="Transparent"
            Template="{StaticResource ConnectorTemplate}"
            Visibility="Hidden" />

    </Grid>
</UserControl>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <DataTemplate x:Key="FlowTabItemHeader">
        <Border x:Name="border">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    x:Name="textBlock"
                    FontSize="17"
                    Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TabItem}, Path=Header}" />
                <Button
                    Margin="10,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding Path=DataContext. RemoveItemCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TabItem}}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TabItem}}"
                    Content="X"
                    FontSize="17" />
            </StackPanel>
        </Border>

    </DataTemplate>

    <DataTemplate x:Key="FlowTabItemHeaderNoRemoveButton">
        <Border x:Name="border">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    x:Name="textBlock"
                    FontSize="17"
                    Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TabItem}, Path=Header}" />

            </StackPanel>
        </Border>

    </DataTemplate>


    <ControlTemplate x:Key="FlowTabItemContentTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Background="LightGray">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="Play" />
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="SyncCircle" />
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="StepForward" />
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="Pause" />
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="JumpRope" />
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="MagnifyPlus" />
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="MagnifyMinusOutline" />
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="BriefcaseEditOutline" />
                    <md:PackIcon
                        Foreground="Gray"
                        Kind="Delete" />
                </StackPanel>

            </Border>
            <ContentControl />
        </Grid>
    </ControlTemplate>


</ResourceDictionary>
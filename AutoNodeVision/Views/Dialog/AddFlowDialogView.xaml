<UserControl
    x:Class="AutoNodeVision.Views.Dialog.AddFlowDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoNodeVision.Views.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AutoNodeVision.ViewModels.Dialog"
    Width="800"
    Height="250"
    d:DataContext="{d:DesignInstance Type=vm:AddFlowDialogViewModel}"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            FontSize="19"
            FontWeight="Bold"
            Text="新建流程" />

        <StackPanel
            Grid.Row="1"
            Margin="100,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="100,0,20,0"
                FontSize="17"
                Text="流程名称:" />
            <TextBox
                MinWidth="160"
                FontSize="17"
                Text="{Binding FlowModel.Name, Mode=OneWayToSource}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                MinWidth="100"
                MinHeight="40"
                Background="DeepSkyBlue"
                Command="{Binding SureCommand}"
                Content="确认"
                FontSize="17"
                Foreground="White" />
            <Button
                MinWidth="100"
                Margin="20,0"
                Background="DeepSkyBlue"
                Command="{Binding CancelCommand}"
                Content="关闭"
                FontSize="17"
                Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>
